
<div class="w3-modal-content w3-animate-zoom" style="padding:32px">
    <div class="w3-container w3-white w3-left">

<h3>Invoice Lists</h3>
<p>Click <b style="color:green">Invoice Number</b> to see more details</p>
<% @invoices.each do |invoice| %>
        <%if current_user.id == invoice.customer.user_id || current_user.id == invoice.employee.user_id %>

        <li> <%= link_to "#{invoice.invoice_num}", order_invoice_path(invoice.order, invoice), {:class=> "w3-bar-item w3-button", :style=>"color:green; font-size:20px"}%>
            Salesman: <%if invoice.employee.name != "" %> <%= invoice.employee.name %> <%else%><%= invoice.employee.user.username %><%end%>, Customer: <%if invoice.customer.name != ""%> <%= invoice.customer.name %> <%else%><%= invoice.customer.user.username %><%end%></li>


        </li>


        <br />
        <%end%>

<% end %>



<% if current_user.admin %>
  <p><%= link_to "See the most ordered item", invoice_items_most_ordered_item_path, :class=> "w3-bar-item w3-button" %></p>
<% end %>
</div>
</div>
