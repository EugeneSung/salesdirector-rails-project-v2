<ul>
<p>

  <li><h5>Order Number: <%= order.order_num %></h5> </li>
  <li>Salesman Name: <%= order.employee.name%></li>
  <li>Customer: <%= order.customer.name%></li><br />

  <li>Order List</li>

<table style="border-spacing: 12px;">

  <tr>
    <th>Item Name</th>
    <th>Quantity</th>
    <th>Sum</th>
</tr>



<tr class="spacer"><td></td></tr>
    <% order.line_items.each do |line_item| %>
    <% if !!line_item.quantity %>
      <tr>

        <td align="center">
          <%= line_item.item.name %>
         </td>
        <td align="center">
          <%= line_item.quantity %>
        </td>
        <td align="center">
          $<%= line_item.item.price * line_item.quantity%>
        </td>

      </tr>
      <% end %>
    <% end %>
    <tr class="spacer"><td></td></tr>
        <tr><td>Total : $<%= order.sum %></td> </tr>
</table>
