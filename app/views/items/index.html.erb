<div class="w3-modal-content w3-animate-zoom" style="padding:32px">
    <div class="w3-container w3-white w3-left">

<h3>Item Lists</h3>
<p>Click <b style="color:green">Item Name</b> to see more details</p>
<% @items.each do |item| %>

        <li> <%= link_to "#{item.name}", item_path(item), {:class=> "w3-bar-item w3-button", :style=>"color:green; font-size:20px"}%>
        <br />


<% end %>
<% if current_user.admin %>
  <p><%= link_to "Add Item", new_item_path, :class=> "w3-bar-item w3-button" %></p>
<%end%>
</div>
</div>
