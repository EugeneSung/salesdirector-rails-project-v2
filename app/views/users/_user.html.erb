<ul>

    <%if !user.status %>
        <h4 style="color:red">Closed Account</h4>
    <%end%>
<p>

  <li><h5>Username: <%= user.username %></h5> </li>
  <li>User Number: <%= user.user_number %></li>

  <% user.contacts.each do |contact| %>
  <li>Name: <%=contact.name%></li>
  <li>Address 1: <%= contact.address_1%></li>
  <li>Address 2: <%= contact.address_2%></li>
  <li>City: <%= contact.city%></li>
  <li>State: <%= contact.state%></li>
  <li>Zipcode: <%= contact.zip%></li>

  <li>Phone Number: <%= contact.phone%></li>
  <%end%>
</p>
</ul>
