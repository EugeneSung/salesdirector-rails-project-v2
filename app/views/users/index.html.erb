<div class="w3-modal-content w3-animate-zoom" style="padding:32px">
    <div class="w3-container w3-white w3-left">

<h3>User Lists</h3>
<p>Click <b style="color:green">Item Name</b> to see more details</p>
<% @users.each do |user| %>

        <li> <%= link_to "#{user.username}", user_path(user), {:class=> "w3-bar-item w3-button", :style=>"color:green; font-size:20px"}%>
          <%if user.admin %>
            <div style="color:red"> - employee</div>
            <%else%>
          <div style="color:red"> - customer</div>

          <%end%>


        </li>
        <br />


<% end %>
<% if current_user.admin %>
  <p><%= link_to "Add User", new_user_path, :class=> "w3-bar-item w3-button" %></p>
<%end%>
</div>
</div>
